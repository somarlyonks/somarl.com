{
  "name": "@somarl.com/page",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start-js": "node scripts/start.js --display-error-details ",
    "start": "NODE_ENV=development npm-run-all -p watch-css start-js",
    "build-js": "node scripts/build.js",
    "build": "NODE_ENV=production npm-run-all build-css build-js",
    "build-css": "ts-node -O '{\"module\": \"commonjs\"}' scripts/build-css.ts",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./node_modules ./src/scss -o ./src/css --watch",
    "build-css-story": "NODE_ENV=development ts-node -O '{\"module\": \"commonjs\"}' scripts/build-css.ts --story true",
    "watch-css-story": "npm run build-css-story && node-sass-chokidar --include-path ./node_modules ./src/stories/scss ./src/scss -o ./src/story-css --watch",
    "test": "NODE_ENV=production && node scripts/test.js",
    "ci": "NODE_ENV=production && node scripts/test.js --ci --coverage",
    "story": "start-storybook -p 3002"
  },
  "dependencies": {
    "@somarl.com/pipe": "0.1.0",
    "@somarlyonks/bem": "1.0.1",
    "bootstrap": "5.0.2",
    "preact": "10.5.13"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "7.14.5",
    "@storybook/preact": "6.1.21",
    "autoprefixer": "10.3.1",
    "babel-jest": "27.0.6",
    "babel-loader": "8.2.2",
    "babel-preset-react-app": "10.0.0",
    "case-sensitive-paths-webpack-plugin": "2.4.0",
    "css-loader": "6.2.0",
    "file-loader": "6.2.0",
    "fork-ts-checker-webpack-plugin": "6.2.12",
    "html-webpack-plugin": "5.3.2",
    "mini-css-extract-plugin": "2.1.0",
    "node-sass-chokidar": "1.5.0",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "6.0.1",
    "postcss": "8.3.5",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-loader": "6.1.1",
    "postcss-safe-parser": "6.0.0",
    "react-dev-utils": "11.0.4",
    "source-map-loader": "3.0.0",
    "style-loader": "3.1.0",
    "terser-webpack-plugin": "5.1.4",
    "ts-node": "10.1.0",
    "tsconfig-paths-webpack-plugin": "3.5.1",
    "url-loader": "4.1.1",
    "webpack": "5.45.1",
    "webpack-dev-server": "3.11.2",
    "webpack-manifest-plugin": "3.1.1",
    "workbox-webpack-plugin": "6.1.5"
  }
}
