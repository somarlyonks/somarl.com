{
  "name": "@somarl.com/page",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start-js": "node scripts/start.js",
    "start": "NODE_ENV=development npm-run-all -p watch-css start-js",
    "build-js": "node scripts/build.js",
    "build": "npm-run-all build-css build-js",
    "build-css": "ts-node -O '{\"module\": \"commonjs\"}' scripts/build-css.ts",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./node_modules ./src/scss -o ./src/css --watch",
    "build-css-story": "NODE_ENV=development ts-node -O '{\"module\": \"commonjs\"}' scripts/build-css.ts --story true",
    "watch-css-story": "npm run build-css-story && node-sass-chokidar --include-path ./node_modules ./src/stories/scss ./src/scss -o ./src/story-css --watch",
    "test": "node scripts/test.js",
    "ci": "node scripts/test.js --ci --coverage",
    "story": "start-storybook -p 3002"
  },
  "dependencies": {
    "@somarl.com/pipe": "0.1.0",
    "@somarlyonks/bem": "1.0.1",
    "bootstrap": "4.5.3",
    "preact": "10.5.7"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "7.12.5",
    "@storybook/preact": "6.0.28",
    "mini-css-extract-plugin": "1.3.0",
    "node-sass-chokidar": "1.5.0",
    "npm-run-all": "4.1.5",
    "ts-node": "9.0.0"
  }
}
